<%- include('../partials/headers/__header-auth.ejs', { title: 'Daftar Pustakawan' }) %>

<%- include('../partials/messages/__messages-auth.ejs') %>
    <section class="hero-section">
        <div class="brand-logo">
            <img src="../../images/assets/logo_medayuagung_warna.webp" alt="Logo Perpustakaan Medayu">
        </div>
        <div class="auth-form-light login-box">
            <h2>Daftar Ulang Akun</h2>
            <form class="pt-3" action="/reg" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-vcard"></i></span>
                        <input type="text" class="form-control form-control-lg" id="npInput" placeholder="Nomor Pegawai (NP)" name="nomor_pegawai" value="<%= (typeof data != 'undefined' && data.nomor_pegawai) ? String(data.nomor_pegawai) : '' %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control form-control-lg" id="passwordInput" placeholder="Kata Sandi" name="kata_sandi" value="">
                        <span class="input-group-text toggle-password"><i class="bi bi-eye-slash"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control form-control-lg" id="passwordInput2" placeholder="Konfirmasi Kata Sandi" name="konfirmasi_kata_sandi" value="">
                        <span class="input-group-text toggle-password"><i class="bi bi-eye-slash"></i></span>
                    </div>
                    <div id="validation-error" class="text-danger mt-2"></div>
                </div>
                <div class="mt-3 text-center d-flex align-items-center justify-content-center">
                    <button type="submit" class="btn auth-form-btn">Daftar</button>
                </div>
            </form>
        </div>
    </section>

<%- include('../partials/scripts/__script-auth.ejs') %>